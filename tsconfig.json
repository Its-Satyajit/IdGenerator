{
  "compilerOptions": {
    "target": "ESNext", // or ES6
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"], // Include DOM for browser support
    "types": ["node"], // Include Node.js types for global and crypto
    "strict": true
  },

  // Specify which files to compile
  "include": ["src/**/*", "src/__tests__", "src/utils/test"],

  "paths": {
    "@/*": ["./src/*"]
  },

  // Specify files to exclude from compilation
  "exclude": ["node_modules", "**/*.spec.ts", "**/__tests__/**/*"],
  "typedocOptions": {
    "entryPoints": ["src/**/*.ts"],
    "name": "@its-satyajit/id-generator",
    "readme": "README.md",
    "out": "docs",
    "exclude": ["**/__tests__/**/*", "**/utils/test/**/*"]
  }
}
